{
  "name": "urban-fashion-shop-backend",
  "version": "1.0.0",
  "author": "Hutama Trirahmanto",
  "license": "MIT",
  "description": "Backend for Urban Fashion Shop.",
  "main": "index.js",
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "dev": "concurrently \"npx tsc --watch\" \"nodemon build/index.js\"",
    "start": "node build/index.js",
    "build": "rm -rf build/ && tsc --build",
    "lint": "eslint . --ext js,ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix && yarn format",
    "format": "prettier --write './**/*.{js,ts,css,md,json}' --config ./.prettierrc.js",
    "format:check": "prettier -c './**/*.{js,ts,css,md,json}' --config ./.prettierrc.js",
    "typechecks": "tsc --noEmit --incremental false",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "husky": "^8.0.3"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "firebase": "^10.7.1",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.8",
    "sequelize": "^6.35.1",
    "xhr2": "^0.2.1",
    "zod": "^3.22.4",
    "zod-validation-error": "^2.1.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
      "prettier --write './**/*.{js,ts,css,md,json}' --config ./.prettierrc.js"
    ],
    "src/**/*.{json,css,scss,md,mdx}": [
      "prettier --write './**/*.{js,ts,css,md,json}' --config ./.prettierrc.js"
    ]
  }
}
